<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<!-- Processing instruction for using Rexx -->
<?language rexx?>

<AnchorPane id="AnchorPane" prefHeight="400" prefWidth="600"
     xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
     <children>
          <VBox>
               <children>
                    <Label text="FinanceInsight" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    <Label text="Income vs. Expenses Graph"
                         style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Button fx:id="refreshButton" text="Refresh" />
                    <BarChart fx:id="incomeExpenseChart" prefWidth="600" prefHeight="300">
                         <xAxis>
                              <CategoryAxis fx:id="xAxis" label="Month" />
                         </xAxis>
                         <yAxis>
                              <NumberAxis fx:id="yAxis" label="Amount" />
                         </yAxis>
                    </BarChart>
               </children>
          </VBox>
     </children>
     <fx:script source="put_FXID_objects_into.my.app.rex" />
     <fx:script source="IncomeExpenseController.rex" />
</AnchorPane>
